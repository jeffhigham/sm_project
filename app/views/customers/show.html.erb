<div class="row">

	<div class="small-12 columns">
		<h2>Profile</h2>
		<div class="row">
			<div class="small-6 small-6 columns">
				<%= image_tag "/images/blank_avatar.jpeg" %>
			</div>
			<div class="small-6 small-6 columns">
				<p>
				  <b>Email:</b>
				  <%= @customer.email %>
				</p>

				<p>
				  <b>Home phone:</b>
				  <%= @customer.home_phone %>
				</p>

				<p>
				  <b>Mobile phone:</b>
				  <%= @customer.mobile_phone %>
				</p>

				<p>
				  <b>Billing:</b>
				  <%= @customer.billing %>
				</p>
				<%= link_to 'Edit', edit_customer_path(@customer), :class => "radius button left" %>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="small-6 small-6 columns">

		<%= gmaps("markers" => {"data" => @markers }, :map_options => {type: "ROADMAP"}) %>
	</div>
		<div class="small-6 small-6 columns">
		<%= render :template => 'properties/index' %>
	</div>
</div>

<%= yield :scripts %>