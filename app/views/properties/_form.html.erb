<%= form_for(@property, :html => {:class => "custom", :id => "property_form"}) do |f| %>

  <div class="row">
  </div>

  <div class="row" id="map" style="visibility:hidden">
  </div>

  <div class="row">
    <fieldset>
      <legend>Where is this place?</legend>
      <div class="row">
        <div class="large-12 columns">
          <%= f.label :address %>
          <%= f.text_field :address, :size => "110" %>
        </div>
      </div>

      <div class="row">
        <div class="large-3 columns">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
        <div class="large-3 columns">
          <%= f.label :state %>
          <%= f.text_field :state %>
        </div>
        <div class="large-3 columns">
          <%= f.label :zip %>
          <%= f.text_field :zip %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <div class="small-9 columns">
            <%= f.check_box :primary %>
          </div>
          <div class="small-3 columns">
          <%= f.label :primary, "Primary Address?", :class => "right inline" %>
          </div>
        </div>
      </div>

    </fieldset>
  </div>

  <div class="row">
    <fieldset>
      <legend>What are the specifics?</legend>
      <div class="row">
        <div class="large-3 columns">
        <%= f.label :driveway_type_id, "Driveway Type?" %>
        <%= f.collection_select :driveway_type_id,
            DrivewayType.order(:id), :id, :name, {:prompt => 'Select One...'}, {:class => "medium"} %>
        </div>
        <div class="large-3 columns">
          <%= f.label :driveway_length_id, "Door to Street Length?" %>
          <%= f.collection_select :driveway_length_id,
            DrivewayLength.order(:id), :id, :name, {:prompt => 'Select One...'}, {:class => "medium"} %>
        </div>
        <div class="large-3 columns">
          <%= f.label :sidewalk_length_id, "Sidewalk Length?" %>
          <%= f.collection_select :sidewalk_length_id,
            SidewalkLength.order(:id), :id, :name, {:prompt => 'Select One...'}, {:class => "medium"} %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.label :notes, "Anything else we should know about this house?", :rows => 4 %>
          <%= f.text_area :notes, size: "130x5" %>
        </div>
      </div>
    </fieldset>
  </div> 
  <%= link_to "Save", "javascript:$('#property_form').submit()", :class => "button" %>

<% end %>
